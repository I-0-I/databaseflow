GET         /                            controllers.SiteController.splash
GET         /site                        controllers.SiteController.index
GET         /robots.txt                  controllers.SiteController.robots

# Feedback
GET         /feedback                    controllers.FeedbackController.feedbackForm
OPTIONS     /feedback                    controllers.FeedbackController.feedbackOptions()
POST        /feedback                    controllers.FeedbackController.postFeedback(ajax: Boolean ?= false)

# Downloads
GET         /download/:os/:variant       controllers.DownloadController.download(os, variant)

# Purchasing
GET         /pricing                     controllers.PurchaseController.pricing()
POST        /purchase                    controllers.PurchaseController.purchaseTeamEdition()

# License Request
GET         /license/request             controllers.UserLicenseController.requestForm()
POST        /license/request             controllers.UserLicenseController.licenseRequest()
GET         /license/:id/view            controllers.UserLicenseController.licenseView(id: java.util.UUID)
GET         /license/:id/download        controllers.UserLicenseController.licenseDownload(id: java.util.UUID)

# Admin Section
->          /admin                       admin.Routes

# Assets
GET         /favicon.ico                 controllers.Assets.at(path = "/public", file = "images/ui/favicon/favicon.ico")
GET         /apple-touch-icon.png        controllers.Assets.at(path = "/public", file = "images/ui/favicon/favicon.png")

GET         /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
