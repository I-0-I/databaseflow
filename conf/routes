GET         /                                controllers.HomeController.home
GET         /ping                            controllers.HomeController.ping(timestamp: Long)

# Connection Management
GET         /c/new                           controllers.ConnectionSettingsController.addNew()
POST        /c/:id                           controllers.ConnectionSettingsController.save(id: java.util.UUID)
GET         /c/:id                           controllers.ConnectionSettingsController.editForm(id: java.util.UUID)
GET         /c/:id/delete                    controllers.ConnectionSettingsController.delete(id: java.util.UUID)

# Query Interface
GET         /q/:conn                         controllers.QueryController.main(conn: java.util.UUID)
GET         /q/:conn/websocket               controllers.QueryController.connect(conn: java.util.UUID)
POST        /q/:conn/export                  controllers.QueryController.export(conn: java.util.UUID)

# Admin
->          /admin                           admin.Routes

