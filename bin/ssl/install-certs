#!/bin/sh
cp /etc/letsencrypt/live/databaseflow.com/* ~/ssl/certs

cd certs

openssl pkcs12 -export -out cert_and_key.p12 -name databaseflow -inkey privkey.pem -in cert.pem -CAfile chain.pem -caname root

keytool -importkeystore -deststorepass "omgWTFdragonz!" -destkeypass "omgWTFdragonz!" -destkeystore databaseflow.jks -srckeystore cert_and_key.p12 -srcstoretype PKCS12 -srcstorepass "omgWTFdragonz!" -alias databaseflow

keytool -import -trustcacerts -alias root -file chain.pem -keystore databaseflow.jks
